<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F8FF"
    tools:context="shraddha.com.daminisportsapp.StudentRegistrationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="2200dp">

        <TextView
            android:id="@+id/student_registartion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            android:text="@string/student_registartion"
            android:textColor="#0F0F0F"
            android:textSize="25dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/student_name_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/name"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_below="@+id/student_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:id="@+id/student_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/student_registartion"
            android:layout_marginTop="40dp"
            android:text="@string/name"
            android:textColor="#0F0F0F"
            android:textSize="20dp"
            android:layout_alignLeft="@+id/student_name_input"
            android:layout_alignStart="@+id/student_name_input" />

        <TextView
            android:id="@+id/college_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:text="@string/select_colege_name"
            android:textColor="#0F0F0F"
            android:textSize="20dp"
            android:layout_below="@+id/student_name_input"
            android:layout_alignLeft="@+id/student_name"
            android:layout_alignStart="@+id/student_name" />

        <Spinner
            android:id="@+id/college_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/college_name"
            android:layout_marginTop="21dp"
            android:layout_alignLeft="@+id/mobile_no"
            android:layout_alignStart="@+id/mobile_no" />

        <TextView
            android:id="@+id/mobile_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="@string/mobile_no"
            android:textColor="#0F0F0F"
            android:textSize="20dp"
            android:layout_below="@+id/college_spinner"
            android:layout_alignLeft="@+id/college_name"
            android:layout_alignStart="@+id/college_name" />

        <EditText
            android:id="@+id/mobile_no_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="phone"
            android:layout_below="@+id/mobile_no"
            android:layout_alignLeft="@+id/student_name_input"
            android:layout_alignStart="@+id/student_name_input"
            android:hint="@string/mobile_no"

            />

        <TextView
            android:id="@+id/student_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/mobile_no"
            android:layout_alignRight="@+id/mobile_no"
            android:layout_below="@+id/mobile_no_input"
            android:layout_marginTop="29dp"
            android:text="@string/email"
            android:textColor="#0F0F0F"
            android:textSize="20dp"
            android:layout_alignLeft="@+id/student_email_input"
            android:layout_alignStart="@+id/student_email_input" />

        <EditText
            android:id="@+id/student_email_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/mobile_no_input"
            android:layout_alignStart="@+id/mobile_no_input"
            android:layout_below="@+id/student_email"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="@string/email"/>

        <TextView
            android:id="@+id/blood_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:text="@string/blood_group"
            android:textColor="#0F0F0F"
            android:textSize="20dp"
            android:layout_below="@+id/student_email_input"
            android:layout_alignLeft="@+id/student_email_input"
            android:layout_alignStart="@+id/student_email_input" />

        <Button
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:layout_toEndOf="@+id/student_name"
            android:layout_toRightOf="@+id/student_name"
            android:text="@string/submit_button"
            android:layout_marginLeft="75dp"/>


        <Spinner
            android:id="@+id/blood_group_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/blood_group"
            android:layout_alignStart="@+id/blood_group"
            android:layout_below="@+id/blood_group"
            android:layout_marginTop="31dp" />

        <TextView
            android:id="@+id/select_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/blood_group_spinner"
            android:layout_alignStart="@+id/blood_group_spinner"
            android:layout_below="@+id/blood_group_spinner"
            android:layout_marginTop="25dp"
            android:text="@string/select_event"
            android:textColor="#0F0F0F"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/indoor_games"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:text="@string/indoor_games"
            android:textColor="#0F0F0F"
            android:textSize="15dp"
            android:layout_below="@+id/select_event"
            android:layout_alignLeft="@+id/indoor_games_list"
            android:layout_alignStart="@+id/indoor_games_list" />

        <ListView
            android:id="@+id/indoor_games_list"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_alignLeft="@+id/student_registartion"
            android:layout_alignStart="@+id/student_registartion"
            android:layout_below="@+id/indoor_games"
            android:layout_marginTop="25dp" />


        <TextView
            android:id="@+id/outdoor_games"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:text="@string/outdoor_games"
            android:textColor="#0F0F0F"
            android:textSize="15dp"
            android:layout_below="@+id/indoor_games_list"
            android:layout_alignLeft="@+id/indoor_games_list"
            android:layout_alignStart="@+id/indoor_games_list" />

        <ListView
            android:id="@+id/outdoor_games_list"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_alignLeft="@+id/outdoor_games"
            android:layout_alignStart="@+id/outdoor_games"
            android:layout_below="@+id/outdoor_games"
            android:layout_marginTop="21dp" />

        <TextView
            android:id="@+id/athletics_games"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/outdoor_games_list"
            android:layout_alignStart="@+id/outdoor_games_list"
            android:layout_below="@+id/outdoor_games_list"
            android:layout_marginTop="56dp"
            android:text="@string/athletics"
            android:textColor="#0F0F0F"
            android:textSize="15dp"/>

        <ListView
            android:id="@+id/athletics_list"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:layout_alignLeft="@+id/athletics_games"
            android:layout_alignStart="@+id/athletics_games"
            android:layout_below="@+id/athletics_games"
            android:layout_marginTop="30dp" />


    </RelativeLayout>
</ScrollView>
